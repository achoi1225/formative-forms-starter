extends layout.pug

mixin userRow(id, firstName, lastName, email)
    tr 
        td= id
        td= firstName
        td= lastName
        td= email

block content 
    h2 Existing Users

    table(class="table")
        thead
            tr
                th(scope="col") id
                th(scope="col") First Name
                th(scope="col") Last Name
                th(scope="col") Email

        tbody
            tr
                each user in users
                    +userRow(user.id, user.firstName, user.lastName, user.email)